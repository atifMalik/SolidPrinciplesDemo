<UserControl x:Class="Solid.SingleResponsibility.Views.DemoImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="216" Width="357">
        <StackPanel Margin="0,0,10,10">
            <TextBlock Text="{Binding CurrentItem.Text}" FontWeight="Bold" FontSize="15"
                   TextWrapping="Wrap" Margin="0,5,0,5"/>

            <Image Source="{Binding CurrentItem.Image}" Stretch="Uniform"  Margin="5" />
        </StackPanel>
</UserControl>
